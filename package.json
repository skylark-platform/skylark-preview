{
  "name": "skylark-preview",
  "description": "Preview end-user experience and ensure seamless content availability on your Skylark-powered streaming platform.",
  "private": true,
  "version": "1.6.0",
  "type": "module",
  "scripts": {
    "dev:chrome": "BROWSER=chrome vite",
    "dev:firefox": "BROWSER=firefox vite build --watch",
    "build:chrome": "tsc && BROWSER=chrome vite build",
    "build:firefox": "tsc && BROWSER=firefox vite build",
    "build:all": "concurrently -n \"chrome,firefox\" \"yarn build:chrome\" \"yarn build:firefox\"",
    "zip:all": "concurrently -n \"chrome.zip,firefox.zip\" \"cd dist && zip -r chrome.zip chrome/\" \"cd dist/firefox && zip -r -FS ../firefox.zip *\"",
    "zip:codebase": "zip -r -FS ./dist/codebase.zip * --exclude '*.git*' --exclude 'node_modules/**'",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 .",
    "preview": "vite preview",
    "test": "vitest --config vitest.config.ts"
  },
  "dependencies": {
    "@fontsource/inter": "5.0.19",
    "@fontsource/work-sans": "5.0.18",
    "@headlessui/react": "1.7.19",
    "@tailwindcss/forms": "0.5.7",
    "@tanstack/react-query": "5.51.9",
    "clsx": "2.1.1",
    "dayjs": "1.11.11",
    "graphql": "16.9.0",
    "graphql-request": "7.1.0",
    "graphql-tag": "2.12.6",
    "json-to-graphql-query": "2.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "5.2.1",
    "react-tailwindcss-datepicker": "1.6.6",
    "use-debounce": "10.0.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.25",
    "@eslint/compat": "1.1.1",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.7.0",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "14.3.1",
    "@testing-library/user-event": "14.5.2",
    "@types/chrome": "0.0.268",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "@vitejs/plugin-react": "4.3.1",
    "@vitest/coverage-v8": "1.6.0",
    "autoprefixer": "10.4.19",
    "concurrently": "8.2.2",
    "eslint": "9.7.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.8",
    "globals": "15.8.0",
    "husky": "9.1.0",
    "jsdom": "24.1.0",
    "msw": "1.3.3",
    "postcss": "8.4.39",
    "postcss-parent-selector": "1.0.0",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.5",
    "tailwindcss": "3.4.6",
    "typescript": "5.5.3",
    "vite": "5.3.4",
    "vitest": "1.6.0"
  }
}
